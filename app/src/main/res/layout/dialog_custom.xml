<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/margin_medium"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="350dp"
            android:minWidth="300dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small"
                    android:textAppearance="@style/TextAppearance.CircularStd.Bold"
                    android:textColor="@color/black_dark"
                    android:textSize="@dimen/text_medium_size"
                    />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:minLines="2"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:textAppearance="@style/TextAppearance.CircularStd.Book"
                    android:textColor="@color/label_black"
                    android:textSize="@dimen/text_medium_size" />


                <TextView
                    android:id="@+id/subContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:textAppearance="@style/TextAppearance.CircularStd.Book"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/text_medium_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_medium"
                    android:paddingRight="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_small">


                    <Button
                        android:id="@+id/negative"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_round_height_small"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:background="@android:color/transparent"
                        android:text="@string/action_cancel"
                        android:textAppearance="@style/TextAppearance.CircularStd.Medium"
                        android:textColor="@color/hint"
                        android:textSize="@dimen/text_medium_size"
                        />

                    <Button
                        android:id="@+id/positive"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/btn_round_height_small"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:text="@string/action_yakin"
                        android:textAppearance="@style/TextAppearance.CircularStd.Medium"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_medium_size"/>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>