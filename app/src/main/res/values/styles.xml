<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black_dark</item>
    </style>

    <style name="TextAppearance.CircularStd.Bold" parent="android:TextAppearance">
        <item name="fontFamily">fonts/CircularStd-Bold.ttf</item>
    </style>

    <style name="TextAppearance.CircularStd.Book" parent="android:TextAppearance">
        <item name="fontFamily">fonts/CircularStd-Book.ttf</item>
    </style>


    <style name="TextAppearance.CircularStd.Medium" parent="android:TextAppearance">
        <item name="fontFamily">fonts/CircularStd-Medium.ttf</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="TextInputLayoutOutline" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/outline_field_gray</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:paddingStart">@dimen/margin_hint</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textAppearance">@style/TextAppearance.CircularStd.Book</item>
        <item name="android:textColor">@color/label_black</item>

    </style>

    //EMAIL
    <style name="TextInputLayoutEmail" parent="TextInputLayoutOutline">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    //PASSWORD
    <style name="TextInputLayoutPassword" parent="TextInputLayoutOutline">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textPassword</item>
    </style>

    //SINGELINE


    //CURRENCY


    //PHONE

    <style name="TextInputLayoutOutlinePhone" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/outline_field_gray</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:paddingStart">@dimen/margin_hint</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textAppearance">@style/TextAppearance.CircularStd.Book</item>
        <item name="android:textColor">@color/label_black</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">15</item>



    </style>

    <style name="TextViewLayoutOutline" parent="android:Widget.TextView">
        <item name="android:background">@drawable/outline_field_gray</item>
        <item name="android:paddingLeft">@dimen/margin_hint</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_medium_size</item>
        <item name="android:textAppearance">@style/TextAppearance.CircularStd.Book</item>
        <item name="android:textColor">@color/label_black</item>
        <item name="android:longClickable">false</item>



    </style>

    <style name="TextViewHintOutline" parent="android:Widget.TextView">
        <item name="android:paddingLeft">@dimen/margin_extra_small</item>
        <item name="android:paddingRight">@dimen/margin_extra_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_label_spinner</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.CircularStd.Book</item>
        <item name="android:textColor">@color/hint_label</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="SpinnerOutlineLayout" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:background">@drawable/outline_field_gray</item>

    </style>

    <item name="item_click_support" type="id" />


    <style name="Indicator">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/white</item>
    </style>

</resources>
